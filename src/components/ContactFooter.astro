---
import { siteConfig } from '../data/siteConfig.js'; // Impor siteConfig

const { email, socialLinks } = siteConfig;
const currentYear = new Date().getFullYear();
---

<footer id="contact" class="bg-footer-bg text-text-light mt-auto">
  <div class="w-full max-w-4xl mx-auto px-6 py-12 md:py-16 text-center">
    {/* Modifikasi H2 */}
    <h2 class="text-2xl font-bold mb-4 flex items-baseline gap-x-2 justify-center">
       <span class="text-2xl font-bold text-gray-hover-light/80 animate-on-scroll" style="transition-delay: 0.1s;">></span>
       <span class="animate-on-scroll" style="transition-delay: 0.2s;">GET IN TOUCH</span>
    </h2>
    <p class="text-lg text-gray-hover-light mb-6 animate-on-scroll">
      Open to collaboration and new opportunities. Let's connect!
    </p>
    <a
      href={`mailto:${email}`}
      class="inline-block text-lg text-gray-hover-light hover:text-white mb-8 underline decoration-gray-hover-light hover:decoration-white underline-offset-4 transition-colors duration-150 ease-in-out animate-on-scroll"
      style="transition-delay: 0.4s;" {/* Tambah delay */}
    >
      {email}
    </a>
    <div class="flex justify-center items-center space-x-5 mb-10 animate-on-scroll" style="transition-delay: 0.5s;"> {/* Tambah delay */}
      {socialLinks.map((link, index) => (
        <a
          href={link.url}
          target="_blank"
          rel="noopener noreferrer"
          aria-label={link.name}
          class="block text-gray-hover-light hover:text-white transition-colors"
          style={`transition-delay: ${0.5 + (index + 1) * 0.05}s`} {/* Stagger ikon */}
        >
          <link.IconComponent class="w-6 h-6" strokeWidth={1.75} />
        </a>
      ))}
    </div>
    <p class="text-sm text-box-border hover:text-gray-hover-light transition-colors duration-150 ease-in-out animate-on-scroll" style="transition-delay: 0.7s;"> {/* Tambah delay */}
      Â© {currentYear} {siteConfig.name}
    </p>
  </div>
</footer>