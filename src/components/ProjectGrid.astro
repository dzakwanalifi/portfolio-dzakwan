---
// src/components/ProjectGrid.astro
import ProjectCard from './ProjectCard.astro';
import { projects } from '../data/projects.js';

const sectionTitle = "SELECTED WORKS";
const titleWords = sectionTitle.split(' ');
---

<section id="web-projects" class="w-full max-w-4xl mx-auto px-6 pb-16 md:pb-24">
  <h2 class="text-2xl md:text-3xl font-bold text-text-dark mb-10 md:mb-12 flex gap-x-2 md:gap-x-3"> {/* Ubah jadi flex */}
    {titleWords.map((word, index) => (
      <span class="block animate-on-scroll" style={`transition-delay: ${index * 0.08}s`}> {/* Tambah inline style delay */}
        {word}
      </span>
    ))}
  </h2>

  <div class="grid grid-cols-1 md:grid-cols-3 gap-6 md:gap-8">
    {projects.map(project => (
      <div class={`${project.gridSpan} animate-on-scroll`}>
        <ProjectCard {...project} />
      </div>
    ))}
  </div>
</section>